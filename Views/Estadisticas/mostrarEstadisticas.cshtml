
@{
    ViewData["Title"] = "mostrarEstadisticas";
    Layout = "~/Views/Shared/_LayoutNavbar.cshtml";
}


<div style="margin-bottom:60px">
    <h2 class="titulo-seccion">Estadísticas</h2>
</div>

<div class="estadisticas-header d-flex align-items-center gap-2 mb-4 flex-wrap">

    

    <select id="tiempoSelect" class="form-select filtro-select">
        <option value="100">Último día</option>
        <option value="101">Última semana</option>
        <option value="102">Último mes</option>
        <option value="103">Últimos 3 meses</option>
        <option value="104">Últimos 6 meses</option>
        <option value="105">Último año</option>
        <option disabled>────────────</option>
        <option value="1">Enero</option>
        <option value="2">Febrero</option>
        <option value="3">Marzo</option>
        <option value="4">Abril</option>
        <option value="5">Mayo</option>
        <option value="6">Junio</option>
        <option value="7">Julio</option>
        <option value="8">Agosto</option>
        <option value="9">Septiembre</option>
        <option value="10">Octubre</option>
        <option value="11">Noviembre</option>
        <option value="12">Diciembre</option>
    </select>

    <button id="btnContinuar" class="btn btn-filtrar">Continuar</button>
</div>


<div class="row" style="margin-top:20px">

    <div class="flex-column">

        <div class="card mb-4">

            <div class="card-header"> <b>Reporte ventas</b> </div>
            <div class="card-body">
                <canvas id="graficoVentas" style="width: 100%; height: 300px;"></canvas>
            </div>

        </div>

    </div>

    <div class="flex-column">

        <div class="card mb-4">

            <div class="card-header"> <b>Reporte ganacias</b> </div>
            <div class="card-body">
                <canvas id="graficoGanacias" style="width: 100%; height: 300px;"></canvas>
            </div>

        </div>
    </div>

    <div class="col-lg-6">

        <div class="card mb-4">

            <div class="card-header"> <b>Reporte productos</b> </div>
            <div class="card-body">
                <canvas id="graficoProductos" style="width: 100%; height: 300px;"></canvas>
            </div>

        </div>

    </div>

    <div class="col-lg-6">

        <div class="card mb-4">

            <div class="card-header"> <b>Reporte formas de pago</b> </div>
            <div class="card-body">
                <canvas id="graficoFormasDePago" style="width: 100%; height: 300px;"></canvas>
            </div>

        </div>

    </div>


</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script src="~/js/estadistica.js"></script>
<script>
    const negocioId = "@ViewBag.negocioId"
</script>
