@model Sistema_Gestion_Negocio_ASP.NET_MVC.Models.ViewModels.UsuarioViewModel
@{
    ViewData["Title"] = "AgregarNegocio";
    Layout = "~/Views/Shared/_LayoutNavbar.cshtml";
}



<h1>AgregarNegocio</h1>


<div>
    
    <p>Ingrese el correo del cliente y se le enviara un link para completar el registro de su usuario y de su negocio</p>

</div>


<form method="post" asp-action="AgregarNegocio" asp-controller="Negocio">

    <div>

        <label for "email">Correo electronico del cliente</label>
        <input  asp-for="correo" type="email" id="email"/>
        <span asp-validation-for="correo" class="text-danger"></span>

        <button type="submit">Enviar</button>
    </div>

</form>

